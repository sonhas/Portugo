programa {
  funcao inicio() {
    /*
    exemplo de comando para exibir números impares de 1 a 100
    */
    
    para(inteiro i=1; i <=100; i=i+2)
    {
      escreva("Número: ")
      escreva(i, "\n")
    }
    escreva("Fora do PARA!!!")

     /*
    Estrutura de repetição For - Para 
    para(inicialização;condição; incremento/decreto)
    //Bloco de código
    }
    Incremento/Decreto
    i = i + 1 => i++
    i = i - 1 => i--

    */
  }
}
